{
  "name": "daylog/daylog",
  "description": "Daylog â€” clean architecture journaling app",
  "type": "project",
  "authors": [
    {
      "name": "Pavel Konovalov",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "bcosca/fatfree-core": "3.8.2"
  },
  "require-dev": {
    "codeception/codeception": "^5.2",
    "codeception/module-phpbrowser": "^3.0",
    "codeception/module-asserts": "*",
    "codeception/module-rest": "^3.4",
    "codeception/module-db": "*",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpstan/phpstan-phpunit": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Daylog\\": "backend/src/",
      "Daylog\\Tests\\Support\\": "backend/tests/_support/"
    }
  },
  "scripts": {
    "remove-codeception-banner": [
      "sed -i \"s/\\. ' https:\\/\\/stand-with-ukraine\\.pp\\.ua'//\" vendor/codeception/codeception/src/Codeception/Command/Run.php"
    ],
    "post-install-cmd": [
      "@remove-codeception-banner"
    ],
    "post-update-cmd": [
      "@remove-codeception-banner"
    ],
    "stan": "phpstan analyse -c phpstan.neon.dist"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
